<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2fd"
    android:label="@string/app_name"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".InputManually">


    <TextView
        style="@style/HeaderTextStyle"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:paddingLeft="10dp"
        android:text="Choose what to input: "
        android:textColor="#000000"/>

    <Button
        style="@style/ButtonStyle"
        android:text="electricity"
        android:id="@+id/button_input_electricity"
        android:onClick="openManuallElectricityMenu"/>

    <Button
        style="@style/ButtonStyle"
        android:text="gas"
        android:id="@+id/button_input_gas"/>

    <Button
        style="@style/ButtonStyle"
        android:text="Water"
        android:id="@+id/button_input_water" />


</LinearLayout>
