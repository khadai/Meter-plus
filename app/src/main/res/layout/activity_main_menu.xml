<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".MainMenu">


    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_personal_page"
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/personalpagebutton" />


        <Space
            android:layout_width="75dp"
            android:layout_height="32dp"
            />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="161dp"
            app:srcCompat="@drawable/logo" />

        <Space
            android:layout_width="40dp"
            android:layout_height="32dp"
            />



        <Button
            android:id="@+id/button_bell"
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:layout_margin="20dp"
            android:background="@drawable/bellbutton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPanel"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_elect"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonelectrgray"
            />

        <Button
            android:id="@+id/button_water"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonwatergray" />

        <Button
            android:id="@+id/button_gas"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttongasgray"
            />
    </LinearLayout>
</RelativeLayout>
