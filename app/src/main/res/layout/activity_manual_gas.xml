<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="ManualElectricity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context="com.example.android.meter.ManualElectricity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="296dp"
        android:layout_height="71dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/textgas" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="79dp"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/inputmeasuretext" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:srcCompat="@drawable/inputmeasurefield" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="58dp"
        />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/textyourmeasurelastmonth" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <Button
        android:id="@+id/button_send_gas"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/sendbutton"/>

</LinearLayout>

