<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="ManualElectricity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context="com.example.android.meter.ManualElectricity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/logo" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="269dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/fullname" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/inputmeasurefield" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="317dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/telnumber" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/inputmeasurefield" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/personalnumber" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/numbermeterelectr" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/inputmeasurefield" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="304dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/numbermeterwater" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/inputmeasurefield" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="304dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/numbermetergas" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/inputmeasurefield" />

                <Button
                    android:id="@+id/edit_personal_page"
                    android:layout_width="285dp"
                    android:layout_height="63dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="100"
                    android:background="@drawable/buttonedit"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>